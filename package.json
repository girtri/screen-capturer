{
	"name": "screen-capturer",
	"version": "1.0.0",
	"description": "Screen Capturer",
	"main": "index.html",
	"chromium-args": "--mixed-context",
	"window": {
		"show": true,
		"frame": false,
		"width": 580,
		"height": 320,
		"min_width": 450,
		"min_height": 320,
		"position": "center",
		"resizable": true,
		"icon": "./assets/icon-48x48.png"
	},
	"scripts": {
		"start": "nw .",
		"build": "webpack",
		"dev": "webpack -d --watch"
	},
	"dependencies": {
		"material-ui": "^0.19.0",
		"react": "^15.6.1",
		"react-dom": "^15.6.1",
		"react-tap-event-plugin": "^2.0.1"
	},
	"devDependencies": {
		"babel-cli": "^6.26.0",
		"babel-core": "^6.26.0",
		"babel-loader": "^7.1.2",
		"babel-plugin-transform-class-properties": "^6.24.1",
		"babel-plugin-transform-decorators-legacy": "^1.3.4",
		"babel-preset-es2017": "^6.24.1",
		"babel-preset-react": "^6.24.1",
		"babel-preset-stage-3": "^6.24.1",
		"nw": "^0.24.4",
		"webpack": "^3.5.5"
	}
}
